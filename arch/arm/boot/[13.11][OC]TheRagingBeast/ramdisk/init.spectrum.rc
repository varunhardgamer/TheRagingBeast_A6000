# SPECTRUM KERNEL MANAGER
# Ramdisk file for profile based kernel management
# Implimentation inspired by Franco's fku profiles

# Initialization
on property:sys.boot_completed=1
   # Set default profile on first boot
   exec u:r:init:s0 root root -- /init.spectrum.sh
   exec u:r:su:s0 root root -- /init.spectrum.sh
   # Enable Spectrum support
   setprop spectrum.support 1
   # Add kernel name
   setprop persist.spectrum.kernel TheNewBeginning

# Balance (default profile)
on property:persist.spectrum.profile=0
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 200000
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1094400
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "thenewbeginning"
    write /sys/kernel/alucard_hotplug/hotplug_enable 1
    write /sys/kernel/alucard_hotplug/hotplug_freq_1_1 1094400
    write /sys/kernel/alucard_hotplug/hotplug_freq_2_0 1094400
    write /sys/kernel/alucard_hotplug/maxcoreslimit 2
    write /sys/kernel/alucard_hotplug/min_cpus_online 1
    write /sys/kernel/alucard_hotplug/hotplug_sampling_rate 50
    write /sys/kernel/mm/ksm/deferred_timer 1
    write /sys/kernel/sound_control/speaker_gain 5
    write /sys/kernel/sound_control/mic_gain 1
    write /sys/module/adreno_idler/parameters/adreno_idler_active Y
    write /sys/module/sync/parameters/fsync_enabled Y
    write /sys/kernel/sched/gentle_fair_sleepers 0
    write /sys/kernel/sched/arch_power 0
    write /proc/sys/kernel/sched_small_task 20
    write /proc/sys/kernel/sched_mostly_idle_load 30
    write /proc/sys/kernel/sched_mostly_idle_nr_run 3


# Performance (based on DrunkSauce Lite)
on property:persist.spectrum.profile=1
